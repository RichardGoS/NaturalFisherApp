<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_azul_bajo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_weight="0.3"
        android:layout_margin="2dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_margin="5dp"
            android:textSize="22dp"
            android:textColor="@color/azul_oscuro"
            android:textStyle="bold"
            android:text="Patacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llImageProducto"
            android:layout_margin="4dp"
            android:background="@drawable/ic_agregarproducto"
            android:layout_width="100dp"
            android:layout_height="84dp"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/llPrecioProducto"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/precioProducto"
                android:textSize="12dp"
                android:textColor="@color/azul_oscuro"
                android:textStyle="italic"
                android:text="$4.800 - Unidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/llDescripcionProducto"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/descripcionProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400 g/12 Unidades"
                android:textColor="@color/azul_oscuro"
                android:textSize="12dp"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/llBotonesDetalleProducto"
        android:layout_weight="0.2"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llBtnAtrasDetalleProducto"
            android:layout_margin="8dp"
            android:layout_weight="0.4"
            android:background="@drawable/shape_btn_atras"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="2dp"
                android:background="@drawable/ic_atras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llBtnEliminarDetalleProducto"
            android:layout_margin="8dp"
            android:layout_weight="0.4"
            android:background="@drawable/shape_btn_cancelar"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="2dp"
                android:background="@drawable/ic_basura_blanco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBtnActualizarDetalleProducto"
            android:layout_margin="8dp"
            android:layout_weight="0.4"
            android:background="@drawable/shape_btn_aceptar"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="2dp"
                android:background="@drawable/ic_actualizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llMensajeDetalleProducto"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtMensaje"
            android:layout_margin="5dp"
            android:textSize="18dp"
            android:textColor="@color/azul_oscuro"
            android:textStyle="bold"
            android:text="Eliminado Con Exito!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>