<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llProducto"
        android:layout_margin="2dp"
        android:gravity="center_horizontal"
        android:background="@color/azul_bajo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/llImgProducto"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_agregarproducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity=""
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nombreProducto"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/azul_oscuro"
                    android:textSize="20dp"
                    android:text="Trucha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/nombreProductoAdicional"
                    android:textStyle="bold"
                    android:textColor="@color/azul_oscuro"
                    android:textSize="12dp"
                    android:text="Trucha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtDescripccionProducto"
                    android:textSize="10dp"
                    android:textColor="@color/azul_oscuro"
                    android:textStyle="italic"
                    android:text="Trucha Empacada al vacio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/precioProductoKg"
                        android:textSize="12dp"
                        android:textColor="@color/azul_oscuro"
                        android:textStyle="italic"
                        android:text="$17.000 Kg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/separadorUnidad"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"
                        android:textSize="12dp"
                        android:textColor="@color/azul_oscuro"
                        android:textStyle="italic"
                        android:text=" -- "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/precioProductoLb"
                        android:textSize="12dp"
                        android:textColor="@color/azul_oscuro"
                        android:textStyle="italic"
                        android:text="$8.500 Lb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>