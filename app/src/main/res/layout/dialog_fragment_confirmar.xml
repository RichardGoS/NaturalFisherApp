<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/shape_dialog_blanco"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitulo"
            android:textColor="@color/azul_oscuro"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Confirmar Venta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtDescripcion"
            android:textColor="@color/azul_oscuro"
            android:textStyle="normal"
            android:textSize="12dp"
            android:text="Esta seguro que desea confirmar la venta..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/btnCancelar"
            android:layout_margin="4dp"
            android:layout_weight="0.4"
            android:background="@drawable/shape_btn_cancelar"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <TextView
                android:textColor="@color/white"
                android:text="Cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnConfirmar"
            android:layout_margin="2dp"
            android:layout_weight="0.6"
            android:background="@drawable/shape_btn_aceptar"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <TextView
                android:textColor="@color/white"
                android:text="Confirmar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>