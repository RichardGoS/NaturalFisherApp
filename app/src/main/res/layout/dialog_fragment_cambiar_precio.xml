<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/shape_dialog_azul_bajo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_margin="2dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textColor="@color/azul_oscuro"
            android:textStyle="bold"
            android:text="Cambiar Precio Venta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:textColor="@color/azul_oscuro"
            android:textStyle="normal"
            android:text="Precio Nuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:focusable="true"
            android:inputType="numberDecimal"
            android:id="@+id/edtPrecioProducto"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="10dp"
            android:hint="$$$$"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/btnCancelar"
                android:layout_margin="4dp"
                android:layout_weight="0.4"
                android:background="@drawable/shape_btn_cancelar"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

                <TextView
                    android:textColor="@color/white"
                    android:text="Cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnAgregarCliente"
                android:layout_margin="2dp"
                android:layout_weight="0.6"
                android:background="@drawable/shape_btn_aceptar"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

                <TextView
                    android:textColor="@color/white"
                    android:text="Agregar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>