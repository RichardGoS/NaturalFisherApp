<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llCliente"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:background="@color/azul_bajo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <LinearLayout
            android:layout_margin="15dp"
            android:layout_weight="0.7"
            android:background="@drawable/ic_usersimple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nombreCliente"
                android:textStyle="bold"
                android:textColor="@color/azul_oscuro"
                android:textSize="20dp"
                android:text="Vanessa Rengifo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/llDireccionCliente"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/azul_oscuro"
                    android:textStyle="bold"
                    android:text="Direccion: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/direccionCliente"
                    android:textSize="12dp"
                    android:textColor="@color/azul_oscuro"
                    android:textStyle="italic"
                    android:text="Cra27 # 35-63 Saleciano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTelefonoCliente"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/azul_oscuro"
                    android:textStyle="bold"
                    android:text="Telefono: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/telefonoCliente"
                    android:textSize="12dp"
                    android:textColor="@color/azul_oscuro"
                    android:textStyle="italic"
                    android:text="3154269535"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>