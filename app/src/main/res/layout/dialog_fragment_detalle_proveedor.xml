<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_azul_bajo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_weight="0.3"
        android:layout_margin="2dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textColor="@color/azul_oscuro"
            android:textStyle="bold"
            android:text="Comercializadora Fresmar SAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llImageUsuario"
            android:layout_margin="4dp"
            android:background="@drawable/ic_proveedor"
            android:layout_width="86dp"
            android:layout_height="100dp"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/llNitProveedor"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="2dp"
                android:textSize="14dp"
                android:textColor="@color/azul_oscuro"
                android:textStyle="bold"
                android:text="NIT."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/nitProveedor"
                android:textSize="12dp"
                android:textColor="@color/azul_oscuro"
                android:textStyle="italic"
                android:text="900481902-6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/llDireccionProveedor"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="2dp"
                android:textSize="14dp"
                android:textColor="@color/azul_oscuro"
                android:textStyle="bold"
                android:text="Direccion."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/direccionProveedor"
                android:textSize="12dp"
                android:textColor="@color/azul_oscuro"
                android:textStyle="italic"
                android:text="Calle 8 # 25 â€“ 20 Alameda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/llCiudadProveedor"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="2dp"
                android:textSize="14dp"
                android:textColor="@color/azul_oscuro"
                android:textStyle="bold"
                android:text="Ciudad."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/ciudadProveedor"
                android:textSize="12dp"
                android:textColor="@color/azul_oscuro"
                android:textStyle="italic"
                android:text="Cali - Valle del Cauca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/llTelefonoProveedor"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="2dp"
                android:textSize="14dp"
                android:textColor="@color/azul_oscuro"
                android:textStyle="bold"
                android:text="Telefono."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/telefonoProveedor"
                android:textSize="12dp"
                android:textColor="@color/azul_oscuro"
                android:textStyle="italic"
                android:text="3154269535 - 3234569087"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/llDescripcionProveedor"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="2dp"
                android:textSize="14dp"
                android:textColor="@color/azul_oscuro"
                android:textStyle="bold"
                android:text="Descripcion."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/descripcionProveedor"
                android:textSize="12dp"
                android:textColor="@color/azul_oscuro"
                android:textStyle="italic"
                android:text="Comercializadora de pescado y mariscos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llBotonesDetalleProveedor"
        android:layout_weight="0.2"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llBtnAtrasDetalleProveedor"
            android:layout_margin="8dp"
            android:layout_weight="0.4"
            android:background="@drawable/shape_btn_atras"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="2dp"
                android:background="@drawable/ic_atras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llBtnEliminarDetalleProveedor"
            android:layout_margin="8dp"
            android:layout_weight="0.4"
            android:background="@drawable/shape_btn_cancelar"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="2dp"
                android:background="@drawable/ic_basura_blanco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBtnActualizarDetalleProveedor"
            android:layout_margin="8dp"
            android:layout_weight="0.4"
            android:background="@drawable/shape_btn_aceptar"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="2dp"
                android:background="@drawable/ic_actualizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMensajeDetalleProveedor"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtMensaje"
            android:layout_margin="5dp"
            android:textSize="18dp"
            android:textColor="@color/azul_oscuro"
            android:textStyle="bold"
            android:text="Eliminado Con Exito!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>