<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    android:gravity="bottom|right"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/btnAddProducto"
        android:layout_margin="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_productos_blanco"
        app:backgroundTint="@color/azul_cian"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:visibility="gone"
        android:src="@drawable/ic_venta_blanco"
        android:id="@+id/btnAddVenta"
        android:layout_margin="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:backgroundTint="@color/azul_secundario"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:visibility="visible"
        android:src="@drawable/ic_menu_circular"
        android:id="@+id/btnOpenMenu"
        android:layout_margin="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:backgroundTint="@color/azul_primario"/>

</RelativeLayout>